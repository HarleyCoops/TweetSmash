# TweetSmash API
TWEETSMASH_API_KEY=your_tweetsmash_api_key_here
TWEETSMASH_WEBHOOK_SECRET=your_webhook_secret_here

# GitHub
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_DEFAULT_MACHINE=basicLinux32gb

# OpenAI (for transcription and summarization)
OPENAI_API_KEY=sk_your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Notion
NOTION_TOKEN=secret_your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id

# YouTube (optional - for metadata)
YOUTUBE_API_KEY=your_youtube_data_api_key

# Redis (for caching and queue)
REDIS_URL=redis://localhost:6379/0

# PostgreSQL (for n8n)
POSTGRES_USER=n8n
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=n8n
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# n8n
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_n8n_password
N8N_WEBHOOK_BASE_URL=http://localhost:5678
N8N_PORT=5678

# MCP Server
MCP_SERVER_NAME=tweetsmash-mcp
MCP_SERVER_VERSION=1.0.0
MCP_LOG_LEVEL=INFO

# Webhook Server
WEBHOOK_SERVER_PORT=8000
WEBHOOK_SERVER_HOST=0.0.0.0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Environment
ENVIRONMENT=development
DEBUG=true